# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.py]
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.java]
indent_size = 4

[*.{cs,csx}]
indent_size = 4

[Makefile]
indent_style = tab

[*.sh]
indent_size = 2
shell_variant = bash

[*.{json,jsonc}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.{css,scss,less}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{xml,xsd,xsl}]
indent_size = 2

[*.sql]
indent_size = 2

[*.{tf,tfvars}]
indent_size = 2

[docker-compose*.yml]
indent_size = 2

[Dockerfile*]
indent_size = 4
